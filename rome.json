{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentSize": 2,
		"lineWidth": 100
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"*.tsbuildinfo",
			"public/**",
			"scripts/**",
			"*.json"
		]
	}
}